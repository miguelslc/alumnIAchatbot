<div class="container-fluid contact">
	<div class="row">
		<div class="col-md-3 contact-info-main">
			<div class="contact-info">
				<img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
				<h2>Contact Us</h2>
			</div>
		</div>
		<div class="col-md-9 contact-form-main">
            <form id="contact-form" name="contact-form" method="POST">
			    <div class="contact-form">
				    <div class="form-group">
				        <label class="control-label col-sm-2" for="name">Nombre y Apellido:</label>
				        <div class="col-sm-10">          
					        <input type="text" class="form-control" id="name" placeholder="Ingrese Nombre y Apellido" name="name">
				        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" placeholder="Ingrese email" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="subject">Asunto:</label>
                        <div class="col-sm-10">          
                            <input type="text" class="form-control" id="subject" placeholder="Ingrese el Asunto" name="subject">
                        </div>
                    </div>
				
				    <div class="form-group">
				        <label class="control-label col-sm-2" for="message">Comentarios:</label>
				        <div class="col-sm-10">
					        <textarea class="form-control" rows="5" id="message"></textarea>
				        </div>
				    </div>
				    <div class="form-group">        
				        <div class="col-sm-offset-2 col-sm-10">
                            <a class="btn btn-primary" onclick="validateForm();">Enviar</a>
				        </div>
                    </div>
                    <div class="status"></div>
                </div>
            </form>
        </div>
	</div>
</div>