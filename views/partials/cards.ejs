<div class="col-md-3">
    <div class="card h-90">
        <img src="<%= person.img %>" 
             alt="<%= person.name %>  <%= person.lastName %>" 
             class="img-fluid img-thumbnail rounded-circle"
             data-placement="top" 
             title="<%= person.name %>  <%= person.lastName %> - <%= person.job %>"
        >
        <div class="card-body">
            <h5 class="card-title"><%= person.name %>  <%= person.lastName %></h5>
            <h4><%= person.job %></h4>
            <p><%= person.description %></p>
        </div>
    </div>
</div>
